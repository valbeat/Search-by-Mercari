{
    "manifest_version": 2,
    "name": "Search by Mercari",
    "description": "アマゾンで開いている本をメルカリで検索する",
    "version": "1.0",

    "content_scripts": [
        {
            "matches": [
                "https://*.amazon.co.jp/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],

    "background": {
        "scripts": [
            "event.js"
        ],
        "persistent": false
    },

    "permissions": [
        "contextMenus"
    ]
}